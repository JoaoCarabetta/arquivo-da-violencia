# Copy this file to .env and fill in your values

# Gemini API Key (required for LLM extraction)
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini Models
# Model used for extracting structured event data from news articles
EXTRACTION_MODEL=gemini-2.5-flash
# Model used for selecting/filtering relevant sources
SELECTION_MODEL=gemini-2.5-lite

# Enable hourly cron job for city ingestion
ENABLE_CRON=false

# Debug mode (set to true for development)
DEBUG=false
